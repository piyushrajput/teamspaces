<apex:page tabStyle="PeopleProfile__c" sidebar="false" controller="PeopleOverviewController" action="{!initAttachmentCheck}" >
	<!-- Prototype / Scriptaculous Framework -->
	<script src="{!URLFOR($Resource.PeopleResourceFiles, 'inc/js/prototype.js')}" />
	<script src="{!URLFOR($Resource.PeopleResourceFiles, 'inc/js/scriptaculous.js')}" />
	<script src="{!URLFOR($Resource.PeopleResourceFiles, 'inc/js/effects.js')}" />
	<!-- Portal Support -->
	<script src="{!$Resource.portalSupport}" />
	<!-- Common Js to aClick the "Add Imagell people Sections -->
	<script src="{!URLFOR($Resource.PeopleResourceFiles, 'inc/js/common.js')}" />
    <!-- CSS styles for Portal Integration -->
    <apex:stylesheet value="{!URLFOR($Resource.portalStyles, 'portal.css')}" />
    <apex:stylesheet value="{!URLFOR($Resource.TeamsResources, 'inc/css/headerTeams.css')}" />
	<apex:stylesheet value="{!URLFOR($Resource.TeamsResources, 'inc/css/widgetTeam.css')}" />
	<!-- Common CSS Styling  -->
	<apex:stylesheet value="{!URLFOR($Resource.PeopleResourceFiles, 'inc/css/commonLayout.css')}" />
	<script src="/soap/ajax/11.1/connection.js" type="text/javascript" />
	<!-- ### Upload File [UPF] ### -->
	<script>
		/**
        * Namespace Prefix Getter
        */
        var namespace = "{!namespace}";		
		
		var countUPF = 0; //Counts amount of uploaded files
		var pid;
		var validFile;
		var outputDivContent = '';
		//Init//
		function init(){
			var param = UPF__getURLParam('pid');
			var inpt = document.getElementById('done_pid').value = param;
		}
		
		//Get Param//
		function UPF__getURLParam(strParamName){
		  var strReturn = '';
		  var strHref = window.location.href;
		  if ( strHref.indexOf('?') > -1 ){
		    var strQueryString = strHref.substr(strHref.indexOf('?'));
		    var aQueryString = strQueryString.split('&');
		    for ( var iParam = 0; iParam < aQueryString.length; iParam++ ){
		      if (aQueryString[iParam].indexOf(strParamName + '=') > -1 ){
		        var aParam = aQueryString[iParam].split('=');
		        strReturn = aParam[1];
		        break;
		      }
		    }
		  }
		  return unescape(strReturn);
		}
		
		//Check Errors//
		function UPF__CheckError__(){
			var divs = iframeUpload.document.getElementsByTagName('DIV');
			if (divs[42]){
				if(divs[42].className == 'errorMsg'){
					var la = document.getElementById('uploadP__');
					la.innerHTML = '';
					divs[42].className = '';
				}
			}
		}
		
		//View Loader//
		function UPF__loader__(){
			var la = document.getElementById('uploadP__');
			la.innerHTML = 'Uploading file, please wait...';
		}
		
		function goBackPhotoGallery(){
			pid = document.getElementById('done_pid').value;
			location.href = "PeoplePhotoGallery?pid=" + pid;
		}

		//Show Uploaded Files//
		function UPF__showInfo__(){
			if(UPF__getURLParam('upstate')){
				sforce.connection.sessionId = '{!$Api.Session_ID}';
				sforce.connection.defaultNamespace = namespace;
				var pid = document.getElementById('done_pid').value;
				var que = "SELECT a.Name, a.BodyLength FROM Attachment a WHERE a.ParentId = '" + pid + "' ORDER BY CreatedDate DESC LIMIT " + document.getElementById('done_count').value;
				var result = sforce.connection.query(que);
				var iter = new sforce.QueryResultIterator(result);
				var output = '<div class="separator"></div>\n<div class="title_from_section">Attachment</div>';
				output += '<div class="attachment_title">You have just uploaded the following files</div>\n\t<div class="attach_item" >\n<dl>';
				while (iter.hasNext()) {
					var attach = iter.next();
					var aux = attach.BodyLength/1024;
					var attName = attach.Name;
					var attSize = Math.round(aux*100)/100;
					output += '<dt>Filename: </dt><dd>' + attName + '</dd>\n<dt>Filesize: </dt><dd>' + attSize + ' KB</dd>\n';
				}
				output += '</dl><div class="separator" /></div>\n</div>';
				
				document.getElementById('uploadOutput').innerHTML = output;
			}
		}
	</script>
	<!-- Page Begin  -->
	<!-- Header -->
	<div class="header_portal" id="headerPeople">
		<!-- Page Section -->
		<div class="page_section">
			<div>
				<h1 class="arial_black">People</h1>
				<h2 class="arial_black">Overview</h2>
			</div>		
		</div>		
        <!-- Search Box -->
        <div class="searchBox">
            <c:PeopleFinder />
        </div>
		<!-- Help for this page -->
		<div class="help">
			<div>
				<a href="javascript:;">Help for this page</a>  <img src="{!URLFOR($Resource.TeamsResources, 'images/layout/help_icon.gif')}" alt="" />
			</div>
		</div>
		<div class="gray_border"></div>
	</div>
	<div class="leftBar">
		<!-- Sidebar -->
		<div class="sidebar">
			<apex:include pageName="PeopleSidebarProfile" />	
		</div>
	</div>
	<!-- /Left Column container -->
	<!-- Contain All -->
	<div class="two_colsContainer">		
		<!--  Central content -->
		<div class="content">
			<!-- The center div at content -->
			<div class="main_form_holder">
				<div class="main_form_header">
					<a href="Javascript:;" onclick="goBackPhotoGallery();">< Go back to Photo Gallery</a>
					<h1>Edit Profile</h1>
					<h2>Upload Picture</h2>
				</div>
				<div class="main_form">	
					<input type="hidden" name="pid" id="done_pid" value="{!$CurrentPage.parameters.pid}" />	
					<input type="hidden" name="upc" id="done_count" value="{!$CurrentPage.parameters.upc}"/>
					<div id='msjError' class="message_to_user" style="{!IF(displayError,'','display:none;')}" >
						<p>The file cannot be uploaded <br />
						Please check if is a valid image type and the file size is smaller than 5Mb.</p>
					</div>
					<div id='msjSuccess' class="message_to_user" style="{!IF(successMessage,'','display:none;')}" >
						<p>File uploaded!<br /></p>
					</div>
					<apex:form > 
						<div class="form_fields">
							<div class="field">
								<label class="uploader">Upload</label><br />
								<span class="info">Select the file to upload.</span><br />
								<apex:inputFile value="{!peopleAttach.Body}" id="peopleAttach" filename="{!peopleAttach.Name}" contentType="{!ContentType}" fileSize="{!AttachmentSize}"/>
							</div>							
							<div class="field">
								<label class="uploader">Click the "Add Image" button to upload the file.</label><br />
								<span class="info">Repeat steps 1 and 2 to attach multiple files.</span><br/>
								<span class="info">(When the upload is completed the file information will appear below.)</span><br/>
								<apex:commandButton action="{!savePeopleAttach}" value="Add Image" />								
							</div>
							<div class="field">
								<label class="uploader">Click done to go back to the photo gallery.</label><br />
								<span class="info">(This will cancel an in-progress upload.)</span><br/>
								<input type="button" value="Done" onclick="goBackPhotoGallery();"/>
							</div>
						</div>
					</apex:form>
					<div id='uploadOutput'></div>
					<iframe name="iframeUpload" style="display:none;" ></iframe>
				</div>
			</div>
		</div>
	</div>
	<script>
		//Initialize
		init();
		UPF__showInfo__();
		readPortalCSSRules();
	</script>
</apex:page>