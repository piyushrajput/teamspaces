<apex:page controller="DiscussionWidgetSubTeamsController">
	<style>
	
		div.mySmallWidget div.header div div h3 {
			padding: 5px 5px 0px 13px!important;
		}	
		
		div.mySmallWidget div.header div div, div.mySmallWidget div.header div, div.mySmallWidget div.header {
			height: 23px!important;
		}
		
		div.mySmallWidget div.box_content div.thinBody div.team {
			margin:4px 0pt;
		}
		
		div.mySmallWidget div.box_content div.thinBody div.team div.desc {
			height:auto;
		}
		
		div.mySmallWidget div.box_content div.thinBody div.team div.desc {
			width: 170px;
		}
		
	</style>

	<!-- Discussion Widget Sub Teams -->
	<div class="teamWidget mySmallWidget" >
		<!-- Widget Title -->		
		<div class="thinHeader">
			<div><div><h4>Sub {!$ObjectType.Team__c.labelPlural}</h4></div></div>
		</div>
		<!-- Widget Container -->   		
		<div class="box_content">
			<div class="thinBody">
				<apex:outputpanel rendered="{!IF(countSubTeams == 0,false,true)}">
					<apex:repeat value="{!subTeams}" var="team">
						<div class="team">
							<div class="desc">
								<a href="/apex/discussionTopics?id={!team.id}">
									{!team.name}
								</a>
								<span class="desc"> ({!team.count})</span>									
							</div>
						</div>
					</apex:repeat>
				</apex:outputpanel>
				<apex:outputpanel rendered="{!IF(countSubTeams == 0,true,false)}">
					<div style="margin: 15px 0px 15px 15px">
						 This team has no sub{!$ObjectType.Team__c.labelPlural}.
					</div>
				</apex:outputpanel>
			</div>				
		</div>
		<!-- Widget Holder Foot -->
		<div class="bottom_borders">
			<div><div></div></div>
		</div>
	</div>
	<div class="clear"></div>
</apex:page>